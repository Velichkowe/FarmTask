{
    "compilerOptions": {
        "target": "es2017",
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "#server/*": ["src/server/*"],
            "#types/*": ["src/types/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}